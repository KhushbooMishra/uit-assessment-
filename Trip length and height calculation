// Program for Calculating trip length and height

#include <iostream>

using namespace std;

struct Trip{

    char trip_name[20];

    int length ,height;

};

int main() {

    int i,n;

    int total_length =0;

    int total_height=0;
    cout<<"Enter number of trips : ";
    cin>>n;
    Trip trip[n];
    for(i=0;i<n;i++){

        cout<<"\nEnter trip details:"<< i+1<<"\n Trip_name, Length , Height \n ";
        cout<<"\nEnter Trip Name:";
        cin>>trip[i].trip_name;
        cout<<"\nEnter Trip Length(km):";
        cin>>trip[i].length;
        cout<<"\nEnter Trip Height:";
        cin>>trip[i].height;


        total_height= total_height +trip[i].height;

        total_length= total_length+trip[i].length;

    }

    cout << "\nTable of trips \n Trip \t Length \t Height \n";

    for(i=0;i<n;i++){

        cout<<trip[i].trip_name<<"\t\t\t"<<trip[i].length<<"\t\t\t"<<trip[i].height<<"\n";

    }

        cout<<"Total Length : "<<total_length <<"\n" ;

        cout<<"Total Height: "<<total_height <<"\n" ;

    return 0;

}
